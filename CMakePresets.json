{
  "version": 5,
  "configurePresets": [
    {
      "name": "native-release",
      "displayName": "Native x86 (Release)",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/native/Release",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    },
    {
      "name": "native-debug",
      "displayName": "Native x86 (Debug)",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/native/Debug",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "cross-arm64",
      "displayName": "Cross ARM64 (Release)",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/arm64/Release",
      "toolchainFile": "${sourceDir}/toolchains/aarch64-linux-gnu.cmake",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    },
    {
      "name": "cross-arm64-debug",
      "displayName": "Cross ARM64 (Debug)",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/arm64/Debug",
      "toolchainFile": "${sourceDir}/toolchains/aarch64-linux-gnu.cmake",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "native-release",
      "configurePreset": "native-release"
    },
    {
      "name": "native-debug",
      "configurePreset": "native-debug"
    },
    {
      "name": "cross-arm64",
      "configurePreset": "cross-arm64"
    },
    {
      "name": "cross-arm64-debug",
      "configurePreset": "cross-arm64-debug"
    }
  ]
}